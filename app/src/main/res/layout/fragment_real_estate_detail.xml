<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealEstateDetailFragment"
    android:background="@color/app_bg_custom_color_1">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivRealEstateDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4729"
        android:scaleType="fitXY"
        android:src="@drawable/qnch_hero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/BottomRounded" />
    <TextView
        android:id="@+id/tvPropertyTypeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Sale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:fontFamily="@font/lora_bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp" />
    <ImageView
        android:id="@+id/ivDetailBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:padding="4dp" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="@color/line_bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRealEstateDetail" />

    <ImageView
        android:id="@+id/ivPlotDetail"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/plot_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine" />

    <TextView
        android:id="@+id/tvIdDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintStart_toEndOf="@id/ivPlotDetail"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        android:text="498547" />

    <TextView
        android:id="@+id/tvRealEstatePriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="@font/roboto_regular"
        android:letterSpacing="0.02"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        android:text="65.000$" />

    <TextView
        android:id="@+id/tvBuyNowDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/buy_now_detail_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIdDetail" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/detailBuyNowButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/darkest_detail_button_color"
        android:text="@string/buy_now_text"
        app:layout_constraintWidth_percent="0.3413"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/tvBuyNowDetail"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:paddingVertical="14dp"
        android:textSize="16sp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="center"
        app:icon="@drawable/shopping_cart"
        app:iconGravity="textStart"
        />



</androidx.constraintlayout.widget.ConstraintLayout>