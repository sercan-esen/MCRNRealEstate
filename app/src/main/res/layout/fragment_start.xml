<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">


    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/lora_regular"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDesc"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8933"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:text="@string/already_have_an_account"
        android:textColor="@color/black"
        android:textSize="40sp" />


    <ImageView
        android:id="@+id/ivAstronomer"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="345:375"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4248"
        android:layout_marginTop="12dp"
        android:src="@drawable/astronomer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:insetTop="0dp"
        app:backgroundTint="@color/text_color_1"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/opensans_bold"
        android:textSize="22sp"
        android:drawableEnd="@drawable/rocket_1"
        android:insetBottom="0dp"
        app:cornerRadius="50sp"
        android:paddingVertical="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7226"
        android:paddingEnd="17dp"
        app:layout_constraintTop_toBottomOf="@id/ivAstronomer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>